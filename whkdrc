.shell powershell

# Reload whkd configuration
# alt + o                 : taskkill /f /im whkd.exe && start /b whkd # if shell is cmd
alt + shift + o           : taskkill /f /im whkd.exe; Start-Process whkd -WindowStyle hidden # if shell is pwsh / powershell
# alt + shift + o         : komorebic reload-configuration

# App shortcuts - these require shell to be pwsh / powershell
# The apps will be focused if open, or launched if not open
# alt + f                 : if ($wshell.AppActivate('Firefox') -eq $False) { start firefox }
# alt + b                 : if ($wshell.AppActivate('Chrome') -eq $False) { start chrome }

alt + q                 : komorebic close
alt + m                 : komorebic minimize

# Focus windows
alt + h                 : komorebic focus left
alt + j                 : komorebic focus down
alt + k                 : komorebic focus up
alt + l                 : komorebic focus right
alt + shift + oem_4     : komorebic cycle-focus previous # oem_4 is [
alt + shift + oem_6     : komorebic cycle-focus next # oem_6 is ]

# Move windows
alt + shift + h         : komorebic move left
alt + shift + j         : komorebic move down
alt + shift + k         : komorebic move up
alt + shift + l         : komorebic move right
alt + shift + return    : komorebic promote

# Stack windows
alt + left              : komorebic stack left
alt + down              : komorebic stack down
alt + up                : komorebic stack up
alt + right             : komorebic stack right
alt + oem_1             : komorebic unstack # oem_1 is ;
alt + oem_4             : komorebic cycle-stack previous # oem_4 is [
alt + oem_6             : komorebic cycle-stack next # oem_6 is ]

# Resize
alt + oem_plus          : komorebic resize-axis horizontal increase
alt + oem_minus         : komorebic resize-axis horizontal decrease
alt + shift + oem_plus  : komorebic resize-axis vertical increase
alt + shift + oem_minus : komorebic resize-axis vertical decrease

# Manipulate windows
alt + t                 : komorebic toggle-float
alt + shift + f         : komorebic toggle-monocle

# Window manager options
alt + r                 : komorebic retile
alt + shift + r         : komorebic stop --whkd; komorebic start --whkd
alt + shift + s         : komorebic stop --whkd;
alt + p                 : komorebic toggle-pause

# Layouts
alt + x                 : komorebic flip-layout horizontal
alt + y                 : komorebic flip-layout vertical

# Workspaces
alt + 1                 : komorebic focus-named-workspace "I"
alt + 2                 : komorebic focus-named-workspace "II"
alt + 3                 : komorebic focus-named-workspace "III"
alt + 4                 : komorebic focus-named-workspace "IV"
alt + 5                 : komorebic focus-named-workspace "V"
alt + 6                 : komorebic focus-named-workspace "VI"
alt + 7                 : komorebic focus-named-workspace "VII"
alt + 8                 : komorebic focus-named-workspace "VIII"
alt + 9                 : komorebic focus-named-workspace "IX"
alt + 0                 : komorebic focus-named-workspace "X"

# Move windows across workspaces
alt + shift + 1         : komorebic move-to-named-workspace "I"
alt + shift + 2         : komorebic move-to-named-workspace "II"
alt + shift + 3         : komorebic move-to-named-workspace "III"
alt + shift + 4         : komorebic move-to-named-workspace "IV"
alt + shift + 5         : komorebic move-to-named-workspace "V"
alt + shift + 6         : komorebic move-to-named-workspace "VI"
alt + shift + 7         : komorebic move-to-named-workspace "VII"
alt + shift + 8         : komorebic move-to-named-workspace "VIII"
alt + shift + 9         : komorebic move-to-named-workspace "IX"
alt + shift + 0         : komorebic move-to-named-workspace "X"

# ------------------------------------------------------------
# Config profile switching (komorebi) - ghar vs laptop
# Uses script at ~/.config/komorebi/switch-komorebi.ps1
# Keybindings:
#   alt + ctrl + g        -> ghar profile
#   alt + ctrl + l        -> laptop profile
#   alt + ctrl + h        -> home profile
#   alt + ctrl + o        -> office.desktop profile
#   alt + ctrl + shift + o -> laptop.office profile
#   alt + ctrl + d        -> default profile
# ------------------------------------------------------------
alt + ctrl + g          : powershell -NoProfile -ExecutionPolicy Bypass -File "$HOME\.config\komorebi\switch-komorebi.ps1" ghar
alt + ctrl + l          : powershell -NoProfile -ExecutionPolicy Bypass -File "$HOME\.config\komorebi\switch-komorebi.ps1" laptop
alt + ctrl + h          : powershell -NoProfile -ExecutionPolicy Bypass -File "$HOME\.config\komorebi\switch-komorebi.ps1" home
alt + ctrl + o          : powershell -NoProfile -ExecutionPolicy Bypass -File "$HOME\.config\komorebi\switch-komorebi.ps1" office.desktop
alt + ctrl + shift + o  : powershell -NoProfile -ExecutionPolicy Bypass -File "$HOME\.config\komorebi\switch-komorebi.ps1" laptop.office
alt + ctrl + d          : powershell -NoProfile -ExecutionPolicy Bypass -File "$HOME\.config\komorebi\switch-komorebi.ps1" default
